{
  "name": "@iamadeveloper-es/vue3-ui-components",
  "version": "0.2.1",
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": "https://github.com/iamadeveloper-es/vue3-ui-components.git",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.node.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "format-lint": "prettier --write src/ && eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prepare": "husky install",
    "test": "lint-staged",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview"
  },
  "dependencies": {
    "click-outside-vue3": "^4.0.1",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@histoire/plugin-vue": "^0.17.17",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.17.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-istanbul": "^2.0.5",
    "@volar/vue-language-plugin-pug": "^1.6.5",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/language-plugin-pug": "^1.8.22",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-vue": "^9.15.1",
    "eslint-plugin-vue-pug": "^0.6.0",
    "histoire": "^0.17.17",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "prettier": "3.0.3",
    "pug": "^3.0.2",
    "sass": "^1.65.1",
    "typescript": "~5.1.6",
    "vite": "^4.4.6",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^2.0.5",
    "vue-pug-plugin": "^2.0.3",
    "vue-tsc": "^1.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx}": [
      "npx prettier --write",
      "npm run lint"
    ],
    "*.{html,css,sass,less,ejs}": [
      "prettier --write src/"
    ]
  }
}
